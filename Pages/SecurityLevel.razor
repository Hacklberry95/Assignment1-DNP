@page "/Security"
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView>
    <h3>Hello @context.User.Identity.Name</h3>

    <h5>Your security level is @context.User.FindFirst(claim => claim.Type.Equals("AuthLevel")).Value</h5>
</AuthorizeView>


<p>This piece of text is visible for level 0 and above</p>
<AuthorizeView Policy="MustBeUser">
    <p>This piece of text is visible for level 1 and above</p>
</AuthorizeView>
<AuthorizeView Policy="AdminPolicy">
    <p>This is visible for level 4 and above</p>
</AuthorizeView>